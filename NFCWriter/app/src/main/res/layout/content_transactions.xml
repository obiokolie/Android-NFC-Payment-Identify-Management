<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.finidata.nfcwriter.Transactions"
    tools:showIn="@layout/activity_transactions">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Transactions"
        android:id="@+id/textViewRecordTransaction"
        android:layout_centerHorizontal="true"
        android:textColor="#5b1e1e"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:allowUndo="true"
        android:textAlignment="center"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textViewPassword"
        android:layout_below="@+id/textViewRecordTransaction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAgentPassword"
        android:layout_alignTop="@+id/textViewPassword"
        android:layout_toRightOf="@+id/textViewPassword"
        android:password="true"
        android:layout_alignRight="@+id/textViewRecordTransaction"
        android:layout_alignEnd="@+id/textViewRecordTransaction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Choose Transaction"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectTransaction"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"
        android:textAlignment="center" />

</RelativeLayout>
